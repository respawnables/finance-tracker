<h2 class="text-center mt-5">User Details</h2>

<div class="card card-header result-block">
  <table class="col-md-12">
    <tbody>
    <tr>
      <td><strong>Name: </strong> <%= @user.full_name %></td>
      <td><strong>Email: </strong> <%= @user.email %></td>
      </td>
      <% if current_user.not_friends_with?(@user.id) %>
        <td><%= link_to 'Follow friend', friendships_path(friend: @user), class: "btn btn-sm btn-warning", method: :post %>
      <% else %>
        <td><span class="badge bg-danger">You are friends</span></td>
      <% end %>
    </tr>
    </tbody>
  </table>
</div>

<% unless @tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead mt-3">This user is not tracking any stocks</p>
<% end %>