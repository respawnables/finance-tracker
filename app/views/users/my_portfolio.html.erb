<h1 class="mt-5">My Portfolio</h1>

<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="row">
      <div class="col-sm-9">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg mt-3" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-warning mt-3" do %>
          <%= 'Search' %>
        <% end %>
      </div>
  <% end %>
  </div>
  <div id="results" class="mt-5 col-sm-9">
    <%= render 'users/result' %>
  </div>
</div>

<% unless @tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>