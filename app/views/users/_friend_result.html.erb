<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header result-block">
    <table class="col-md-12">
      <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><strong>Name: </strong> <%= friend.full_name %></td>
          <td><strong>Email: </strong> <%= friend.email %></td>
          <td><strong>Actions: </strong> <%= link_to 'View profile', user_path(friend), class: "btn btn-sm btn-warning" %></td>
          <% if current_user.not_friends_with?(friend.id) %>
            <td><%= link_to 'Follow friend', friendships_path(friend: friend), class: "btn btn-sm btn-warning", method: :post %>
          <% else %>
            <td><span class="badge bg-danger">You are friends</span></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>